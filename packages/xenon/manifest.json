{
    "name": "Xenon Code Editor",
    "short_name": "Xenon",
    "version": "1.1.0",
    "manifest_version": 2,
    "minimum_chrome_version": "27",
    "description": "Offline-capable, feature rich, extensible code editor designed for Chrome",
    "offline_enabled": true,
    "app": {
        "background": {
            "scripts": ["background.chrome.js"]
        }
    },
    "permissions": [
        "storage",
        "webview",
        "identity",
        "syncFileSystem",
        "unlimitedStorage",
        {"fileSystem": ["write", "retainEntries", "directory"]},
        {"socket":["tcp-connect", "tcp-listen"]},
        "http://*/",
        "https://*/",
        "*://*/*"
    ],
    "icons": {
        "128": "icons/Icon.png",
        "16": "icons/Icon16.png",
        "48": "icons/Icon48.png"
    }
}